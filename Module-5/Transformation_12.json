//input json
{
    "employee": {
      "firstName": "John",
      "lastName": "Doe",
      "address": {
        "street": "123 Main St",
        "city": "Anytown",
        "state": "CA",
        "zip": "12345"
      },
      "phones": [
        {
          "type": "home",
          "number": "555-555-1234"
        },
        {
          "type": "work",
          "number": "555-555-5678"
        }
      ]
    }
  }

//json output
{
    "employee" : {
      "address" : "123 Main St,Anytown,CA,12345",
      "fullname" : "John Doe",
      "phoneNumbers" : [ {
        "type" : "home",
        "number" : "555-555-1234"
      }, {
        "type" : "work",
        "number" : "555-555-5678"
      } ]
    }
  }

  //json spec
  [
    {
      "operation": "modify-overwrite-beta",
      "spec": {
        "employee": {
          "fullname": "=concat(@(1,firstName),' ',@(1,lastName))",
          "address": "=concat(@(1,address.street),',',@(1,address.city),',',@(1,address.state),',',@(1,address.zip))",
          "phoneNumbers": "@(1,phones)"
        }
      }
     },
    {
      "operation": "remove",
      "spec": {
        "employee": {
          "firstName": "",
          "lastName": "",
          "phones": ""
        }
      }
    }
    ]