//json input
{
    "employees": [
      {
        "name": "John Doe",
        "salary": 50000,
        "department": "Sales"
      },
      {
        "name": "Jane Smith",
        "salary": 60000
      },
      {
        "name": "Bob Johnson",
        "department": "IT"
      }
    ]
  }

  //json output
  {
    "employees" : [ {
      "name" : "John Doe",
      "salary" : 50000,
      "department" : "Sales",
      "bonus" : 1000
    }, {
      "name" : "Jane Smith",
      "salary" : 60000,
      "bonus" : 1500
    }, {
      "name" : "Bob Johnson",
      "department" : "IT",
      "bonus" : 900
    } ],
    "totalBonus" : 3400
  }

  //json spec
  [
    {
      "operation": "modify-default-beta",
      "spec": {
        "employees": {
          "[0]": {
            "bonus": 1000,
            "tempBonus": 1000
          },
          "[1]": {
            "bonus": 1500,
            "tempBonus": 1500
          },
          "[2]": {
            "bonus": 900,
            "tempBonus": 900
          }
        }
      }
      },
    {
      "operation": "shift",
      "spec": {
        "employees": {
          "*": {
            "*": "employees[&1].&",
            "tempBonus": "totalBonus[]"
          }
        }
      }
      },
    {
      "operation": "modify-overwrite-beta",
      "spec": {
        "totalBonus": "=intSum(@(1,totalBonus))"
      }
      }
  
  
  ]