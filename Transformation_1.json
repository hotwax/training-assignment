Jolt Spec
[
  {
    "operation": "modify-overwrite-beta",
    "spec": {
      "orders": {
        "*": {
          "customer": {
            "fullName": "=concat(@(1,firstName),' ',@(1,lastName))",
            "address": "=concat(@(0,street),', ',@(0,city),', ',@(0,state),' ',@(0,zip))"
          },
          "items": {
            "*": {
              "InverseOfQuantity": "=divide(1, @(1,quantity))",
              "Quantity_Total": "=divide(@(1,price), @(1,InverseOfQuantity))",
              "price": "=toDouble"
            }
          }
        }
      }
    }
    },
  {
    "operation": "shift",
    "spec": {
      "orders": {
        "*": {
          "items": {
            "*": {
              "Quantity_Total": "orders.[#4].total[]"
            }
          },
          "@": "orders.[&]"
        }
      }
    }
    },
  {
    "operation": "remove",
    "spec": {
      "orders": {
        "*": {
          "customer": {
            "firstName": "",
            "lastName": ""
          },
          "items": {
            "*": {
              "InverseOfQuantity": "",
              "Quantity_Total": ""
            }
          }
        }
      }
    }
    },
  {
    "operation": "modify-overwrite-beta",
    "spec": {
      "orders": {
        "*": {
          "total": "=doubleSum(@(1,total))"
        }
      }
    }
    }
]
